  </approach>
  
  <cruise speed="83" alt="5000">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.90" />
    <control-setting axis="/controls/engines/engine[0]/mixture" value="0.85" /> <!-- Ground adjustment only -->
  </cruise>

  <cockpit x="-0.075" y="0" z="1.125"/>

 <fuselage ax="2.071" ay="0" az="0.03628" bx="-1.583" by="0" bz="0.03628" width="0.710" taper="0.60" midpoint="1"/>
  <fuselage ax="-1.583" ay="0" az="0.03628" bx="-0.972" by="0" bz="0.095" width="0.710" taper="0.39" midpoint="0.5" cy="1.59" cz="1.45"/>
  <fuselage ax="-0.972" ay="0" az="0.095" bx="-6.0004" by="0" bz="0.142" width="0.710" taper="0.19" midpoint="0" cy="2.69" cz="1.845"/>

    <!-- Wing up -->
  <wing x="0.3479" y="0.0" z="1.176" 
        chord="1.53" 
        length="5.4" 
        taper="1"
        incidence="2.5"
        twist="-1.2"
        dihedral="4" 
        camber="0.125">
        <stall aoa="12" width="3.0" peak="1.35"/>
        <flap1 start="0.495" end="1" lift="1.25" drag="1.21"/>
      
        <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
        <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/>
      
        <control-output control="FLAP1" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP1" side="right" prop="/surface-positions/right-aileron-pos-norm"/>
  </wing>

  <!-- Wing down -->
  <mstab x="0.04516" y="0.42" z="-0.4439" 
        chord="1.342" 
        length="4.872" 
        taper="1" 
        incidence="2.5"
        twist="-1.2"
        dihedral="4"
        camber="0.125">
        <stall aoa="12" width="3.0" peak="1.35"/>
        <flap1 start="0.495" end="1" lift="1.25" drag="1.21"/>
     <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
        <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/>
      
        <control-output control="FLAP1" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP1" side="right" prop="/surface-positions/right-aileron-pos-norm"/>
  </mstab>

    <hstab x="-5.972" y="0.0" z="0.126" 
	   chord="1.43" 
	   length="1.55" 
         taper="1"
         incidence="0.75"
         effectiveness="1.5"
         camber="0.002"> 
         <stall aoa="17" width="4" peak="2.0"/>
         <flap0 start="0" end="1" lift="1.57" drag="1.22"/>
         <control-input axis="/controls/flight/elevator" control="FLAP0"/>
         <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>
         <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>

 <!-- fin-rudder -->

  <vstab x="-6.22" y="0" z="0.555" 
	  chord="1.186" 
	  length="1.234" 
        taper="0.64"
        effectiveness="1.54" 
	  sweep="0">
       <stall aoa="20" width="3" peak="1.5"/>
       <flap0 start="0" end="1" lift="1.36" drag="1.22"/>
         <control-input axis="/controls/flight/rudder" square="true" control="FLAP0" invert="true"/>
         <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>
         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm" min="1" max="-1"/>
  </vstab>

    <!-- Engines      : Lerhone-9C

